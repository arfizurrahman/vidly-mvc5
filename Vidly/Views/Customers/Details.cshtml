@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li><strong>Membership Type:</strong> @Model.MembershipType.Name</li>
    @if (Model.BirthDate != null)
    {
        DateTime date = (DateTime)Model.BirthDate;
        DateTime dateOnly = date.Date;
        <li><strong>Birthdate:</strong> @dateOnly.ToString("d")</li>
    }
</ul>

